{
  "compilerOptions": {
      "plugins": [{
          "name": "tslint-language-service-ts3"
      }],
      "target": "es6",
      "module": "commonJS",
      "lib": ["dom", "es2017"],
      "outDir": "lib",
      "rootDir": "src",
      "strict": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": false,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "declaration": false,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noEmitOnError": true,
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "typeRoots": [
          "../node_modules/@types"
      ],
      "types": [
          "node",
          "jest",
      ],
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
          "@logs/*": ["logs/*"],
          "@controllers/*": ["controllers/*"],
          "@interfaces": ["interfaces"],
          "@actions": ["actions/index"],
          "@event/*": ["controllers/events/*"],
          "@logger/*": ["logger/*"],
          "@routes/*": ["routes/*"]
      },
      "watch": false
  },
  "defaultSeverity": "error",
  "include": [
      "src/**/*"
  ],
  "exclude": ["node_modules", "test", "**/lib/*", "build"],
  "compileOnSave": true,
  "buildOnSave": true
}